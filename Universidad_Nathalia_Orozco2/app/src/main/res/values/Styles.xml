<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para el título -->
    <style name="TextViewTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Estilo para los elementos de la lista -->
    <style name="RecyclerViewItemStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Estilo para el botón -->
    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Estilo para el fondo del RecyclerView -->
    <style name="RecyclerViewStyle">
        <item name="android:background">@color/blue_light</item>
    </style>

    <!-- Estilo para el LinearLayout -->
    <style name="LinearLayoutStyle">
        <item name="android:background">@color/blue_light</item>
    </style>
</resources>
